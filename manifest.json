{
	"manifest_version": 3,
	"name": "MSPA Translator",
	"version": "0.5",

	"description": "Apply translations to MSPA To Go mirrors",

	"homepage_url": "https://github.com/roberd82/mspa-to-go-translator-extension",

	"icons": {
		"32": "icon.svg",
		"48": "icon.svg",
		"64": "icon.svg",
		"96": "icon.svg"
	},

	"action": {
		"default_icon": "icon.svg",
		"default_title": "MSPA Translator",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["*://mspa.chadthundercock.com/*", "*://mspa.roberd.me/*"],
			"js": ["translate_mspa.js"]
		}
	],

	"permissions": ["storage"],

	"browser_specific_settings": {
		"gecko": {
			"id": "@mspa-translator.roberd82",
			"data_collection_permissions": {
				"required": ["none"]
			}
		},
		"gecko_android": {}
	}
}
